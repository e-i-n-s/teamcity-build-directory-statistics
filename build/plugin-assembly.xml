<?xml version="1.0"?>
<assembly>
    <id>plugin-assembly</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../teamcity-build-directory-statistics-server/target/generated-resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>licenses</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/teamcity-plugin.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>target/teamcity-build-directory-statistics-agent.zip</source>
            <outputDirectory>agent</outputDirectory>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>ch.mstuderus:teamcity-build-directory-statistics-server</include>
                <include>ch.mstuderus:teamcity-build-directory-statistics-common</include>
            </includes>
            <binaries>
                <outputDirectory>server</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <includes>
                            <include>*</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
